<h1>Articles Index</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="2"></th>
	</tr>
	<% @articles.each do |a| %>
		<tr>
			<td><%= a.title %></td>
			<td><%= a.text %></td>
			<td><%= link_to 'Show', article_path(a) %></td>
			<td><%= link_to 'Edit', edit_article_path(a) %></td>
		</tr>
	<% end %>
</table>

<%= link_to "Back", root_path %>
