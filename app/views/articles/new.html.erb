<h1>New Article</h1>

<%= form_for :article, url: articles_path do |f| %>
	<% if @article.errors.any? %>
		<h1>ERROR!</h1>
	<% end %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to "Back", root_path %>